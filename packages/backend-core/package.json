{
  "name": "@crypto-dashboard/backend-core",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@crypto-dashboard/shared": "workspace:*",
    "async-mutex": "0.5.0",
    "rxjs": "7.8.2",
    "ws": "8.18.3"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "@types/ws": "8.18.1",
    "@types/jest": "30.0.0",
    "jest": "30.2.0",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "^@crypto-dashboard/shared$": "<rootDir>/src/__mocks__/@crypto-dashboard/shared.ts",
      "^@crypto-dashboard/shared/(.*)\\.js$": "<rootDir>/../../../packages/shared/src/$1.ts",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@crypto-dashboard)/)"
    ],
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "module": "ESNext"
          }
        }
      ]
    }
  }
}

