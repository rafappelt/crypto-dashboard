{
  "name": "@crypto-dashboard/backend-core",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@crypto-dashboard/shared": "workspace:*",
    "rxjs": "^7.8.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/ws": "^8.5.10",
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "^@crypto-dashboard/shared$": "<rootDir>/src/__mocks__/@crypto-dashboard/shared.ts",
      "^@crypto-dashboard/shared/(.*)\\.js$": "<rootDir>/../../../packages/shared/src/$1.ts",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@crypto-dashboard)/)"
    ],
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "module": "ESNext"
          }
        }
      ]
    }
  }
}

