{
  "name": "@crypto-dashboard/backend-nest",
  "version": "1.0.0",
  "type": "module",
  "description": "NestJS backend for crypto dashboard",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/jest-integration.config.ts",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@crypto-dashboard/backend-core": "workspace:*",
    "@crypto-dashboard/shared": "workspace:*",
    "@nestjs/common": "11.1.8",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.8",
    "@nestjs/platform-express": "11.1.8",
    "@nestjs/platform-socket.io": "11.1.8",
    "@nestjs/websockets": "11.1.8",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "socket.io": "4.8.1",
    "ws": "8.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.10",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.8",
    "@types/express": "4.17.25",
    "@types/jest": "30.0.0",
    "@types/node": "20.19.24",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "typescript-eslint": "8.46.3",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "socket.io-client": "4.8.1",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@crypto-dashboard/shared$": "<rootDir>/__mocks__/@crypto-dashboard/shared.ts",
      "^@crypto-dashboard/shared/(.*)\\.js$": "<rootDir>/../../packages/shared/src/$1.ts",
      "^@crypto-dashboard/backend-core$": "<rootDir>/../../../packages/backend-core/src/index.ts",
      "^@crypto-dashboard/backend-core/(.*)\\.js$": "<rootDir>/../../../packages/backend-core/src/$1.ts",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@crypto-dashboard)/)",
      ".*/dist/.*"
    ]
  }
}
